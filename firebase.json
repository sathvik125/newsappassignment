{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.log"  
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {  
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json",
    "ignoreWarnings": true 
  }
}
